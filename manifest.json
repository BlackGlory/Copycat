{
  "version": "1.0.1",
  "name": "Copycat",
  "manifest_version": 2,
  "description": "Copy content from web powerful than ever before.",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["inject.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
